{
  "name": "ntrust",
  "version": "0.0.0",
  "description": "Batch-manage trusted publishing relationships between npm packages and CI/CD providers",
  "keywords": [
    "trusted-publish",
    "npm",
    "github-actions",
    "gitlab-ci"
  ],
  "homepage": "https://github.com/yjl9903/ntrust#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/ntrust/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/ntrust.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "bin": {
    "ntrust": "./cli.mjs"
  },
  "files": [
    "dist",
    "*.mjs"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "prettier --write './**/*.{mjs,ts}'",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "breadc": "^1.0.0-beta.10",
    "execa": "^9.6.1",
    "js-yaml": "^4.1.1"
  },
  "engines": {
    "node": ">=v24.0.0"
  }
}